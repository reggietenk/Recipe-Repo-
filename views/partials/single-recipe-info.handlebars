<div class="card shadow text-dark bg-light h-100 mb-3 rounded" style="max-width: 18rem;">
    <div class="card-header card-header1">
    <a href="/recipes/{{id}}" target="_blank">{{recipe_name}}</a>
    </div>
  <div class="card-body">
    <p class="card-text"><h5>Instructions:</h5> <h6>{{recipe_instructions}}</h6></p>
    <p class="card-text"><h5>Ingredients:</h5> <h6>{{ingredients}}</h6></p>
    <div class="meta">
    by {{user.username}} on {{format_date created_at}}
    </div>
  </div>
</div>

