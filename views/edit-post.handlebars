<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form id="edit-post-form">
    <div>
      <input name="post-title-edit" type="text" value="{{post.title}}"/>
    </div>
    <div>
      <label for="post-url">Content</label>
      <textarea class="postarea" id="post-text" name="post-content-edit" type="text">{{post.post_text}}</textarea>
    </div>
    <div>
      created on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>


