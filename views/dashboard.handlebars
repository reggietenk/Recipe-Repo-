<section>
  <h2>Create New Recipe</h2>

  <form class="new-recipe-form">
    <div>
      <label for="recipe-title">Recipe Name</label>
      <input type="text" id="recipe-title" name="recipe-title" />
    </div>
    <div>
      <label for="recipe-url">Recipe Instructions</label>
      <textarea class="postarea" id="recipe-text" name="recipe-text"></textarea>
    </div>
    <div>
      <label for="recipe-ingredients">Ingredients</label>
      <textarea class="postarea" id="recipe-ingredients" name="recipe-ingredients"></textarea>
    </div>
    <div class="row">
    <div class="dropdown .me-3">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Category
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" data-value="1">Beef</a></li>
        <li><a class="dropdown-item" data-value="2">Chicken</a></li>
        <li><a class="dropdown-item" data-value="3">Dessert</a></li>
        <li><a class="dropdown-item" data-value="4">Lamb</a></li>
        <li><a class="dropdown-item" data-value="5">Miscellaneous</a></li>
        <li><a class="dropdown-item" data-value="6">Pasta</a></li>
        <li><a class="dropdown-item" data-value="7">Pork</a></li>
        <li><a class="dropdown-item" data-value="7">Seafood</a></li>
        <li><a class="dropdown-item" data-value="8">Side</a></li>
        <li><a class="dropdown-item" data-value="9">Starter</a></li>
        <li><a class="dropdown-item" data-value="10">Vegetarian</a></li>
        <li><a class="dropdown-item" data-value="11">Vegan</a></li>
        <li><a class="dropdown-item" data-value="12">Breakfast</a></li>
        <li><a class="dropdown-item" data-value="13">Goat</a></li>
      </ul>
    </div>
    <div>
    <button type="submit" class="btn">Publish</button>
    </div>
    </div>
  </form>
</section>

{{#if recipes.length}}
<section>
  <h2>Your Recipes</h2>
  <div class="row">
    {{#each recipes as |recipes|}}
    <div class="col-4">
      {{> user-recipe-card recipes}}
    </div>
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>